{
    "name": "offline-agency/laravel-aruba-sms",
    "description": "Laravel notification channel and API client for Aruba SMS Panel",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "sms", "aruba", "notification-channel", "italy"],
    "authors": [
        {
            "name": "Offline Agency",
            "email": "support@offlineagency.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/http": "^12.0",
        "illuminate/notifications": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "larastan/larastan": "^3.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OfflineAgency\\ArubaSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OfflineAgency\\ArubaSms\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OfflineAgency\\ArubaSms\\ArubaSmsServiceProvider"
            ],
            "aliases": {
                "ArubaSms": "OfflineAgency\\ArubaSms\\Facades\\ArubaSms"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage --min=100",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "format:check": "vendor/bin/pint --test"
    },
    "prefer-stable": true
}
