{
    "name": "offline-agency/laravel-aruba-sms",
    "description": "Simple integration with aruba sms",
    "keywords": [
        "offline-agency",
        "laravel-aruba-sms"
    ],
    "homepage": "https://github.com/offline-agency/laravel-aruba-sms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Offline Agency",
            "email": "support@offlineagency.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^7.4|^8.0",
        "illuminate/console": "^6.0|^7.0|^8.0",
        "illuminate/http": "^6.0|^7.0|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0",
        "nesbot/carbon": "^2.54"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "OfflineAgency\\LaravelArubaSms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OfflineAgency\\LaravelArubaSms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OfflineAgency\\LaravelArubaSms\\LaravelArubaSmsServiceProvider"
            ],
            "aliases": {
                "LaravelArubaSms": "OfflineAgency\\LaravelArubaSms\\LaravelArubaSmsFacade"
            }
        }
    }
}
